{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "backend - build",
            "detail": "dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/backend/Backend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "group": "build",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "backend - publish",
            "detail": "dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/backend/Backend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "group": "publish",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "backend - watch",
            "detail": "dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/backend/Backend.csproj",
                "--launch-profile",
                "Development",
                "--verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "group": "watch",
                "clear": true
            },
            "problemMatcher": {
                "base": "$msCompile",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^dotnet watch âŒš Building",
                    "endsPattern": "^.*Application started\\.|^.*Now listening on:"
                }
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "backend - run",
            "detail": "dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/backend/Backend.csproj",
                "--launch-profile",
                "Development"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "group": "run",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "backend - run no profile",
            "detail": "dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/backend/Backend.csproj",
                "--no-launch-profile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://localhost:5100;https://localhost:5101"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "group": "run",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "frontend - watch",
            "detail": "vite",
            "type": "npm",
            "script": "dev",
            "path": "frontend",
            "problemMatcher": []
        },
        {
            "label": "watch-all",
            "detail": "Run all watch tasks in parallel",
            "dependsOn": [
                "backend - watch",
                "frontend - watch"
            ],
            "dependsOrder": "parallel",
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}